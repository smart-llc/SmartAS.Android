<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main_nav_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="1184px"
    android:background="#FFF"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:id="@+id/content_main_nav_bar_header_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:text="@string/activity_main_auth_necessary"
        android:textColor="@color/mainColor"/>

    <Button
        android:id="@+id/content_main_nav_bar_header_auth_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Авторизоваться"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:textAllCaps="false"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:background="@drawable/round_button_main_color"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
